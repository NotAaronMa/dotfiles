#shell script for mounting usbs
# -l m: lists all partitions that are not in fstab
# -l a: list mounted drives
#
#

fst=$(cat /etc/fstab | grep /dev/ | cut -c 8-  )
all=$(lsblk -l -o "NAME,TYPE"  | grep part | sed 's/\s.*$//')

if [ $1 == "-l" ]; then
  if [ $2 == "a" ]; then
    echo $($(cat /etc/fstab | grep /dev/ | cut -c 8-) | grep $(lsblk -l -o "NAME,TYPE"| grep part | sed 's/\s.*$//'))
  else
    echo k  
  fi
  
fi

if [ $1 == "-m" ]; then
  echo "mounting $2 to $3"
fi
