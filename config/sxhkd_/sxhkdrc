#program hotkeys
alt + F1
	rofi -show run
control + alt + t
	xst
#decrease window gaps
super + minus
	~/.config/sxhkd/gaps.sh 10
super + equal
    ~/.config/sxhkd/gaps.sh -10
#move windows
super + {h,j,k,l}
    dir={west,south,north,east}; \
    bspc node $dir -n 'focused.!automatic' || \
    bspc node -n ${dir}.'!automatic' || \
    bspc node -s $dir

#resize windows
super + r 
	bspc node @/ -R 90
#set window state
super + space
	~/.config/sxhkd/state.sh
F11
	bspc node -t fullscreen
	~/.config/sxhkd/full.sh
#change focus
alt + {h,j,k,l}
    bspc node -f {west,south,north,east}
#kill process
super + control + x
    bspc node -k
#close windows
super + x
    bspc node -c
#go to desktop
super + {1,2,3,q,w,e}
    bspc desktop -f 'focused:^{1,2,3,4,5,6}.!focused' 
#give to desktop
super + shift + {1,2,3,q,w,e}
    bspc node -d "focused:^{1,2,3,4,5,6}"
#sound bullshit
XF86AudioMute
	amixer set Master toggle
XF86AudioLowerVolume 
	amixer set Master 10%-
XF86AudioRaiseVolume
	amixer set Master 10%+
